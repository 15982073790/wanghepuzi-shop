.cart-container {
  width: 100vw;
  min-height: 100vh;
  padding: 20rpx 40rpx 120rpx;
  background-color: #f5f5f5;
  position: relative;
}
.cart-container .goods-item {
  height: 236rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  background-color: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-radius: 8rpx;
}
.cart-container .goods-item .title {
  height: 74rpx;
  line-height: 37rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.cart-container .goods-item .goods-img {
  margin: 0 20rpx;
}
.cart-container .goods-item .goods-img image {
  width: 164rpx;
  height: auto;
}
.cart-container .goods-item .goods-tit {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}
.cart-container .goods-item .goods-tit .desc {
  font-size: 24rpx;
  color: #999;
}
.cart-container .goods-item .goods-tit .price {
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
}
.cart-container .goods-item .goods-tit .price .l {
  color: #FF3A0B;
  font-size: 28rpx;
}
.cart-container .item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1px solid #F5F5F5;
}
.cart-container .item .left {
  flex: 1;
}
.cart-container .item .left .user {
  font-size: 32rpx;
  color: #333;
}
.cart-container .item .left .user text {
  font-weight: 500;
  padding-right: 20rpx;
}
.cart-container .item .left .info {
  margin-top: 20rpx;
  color: #666;
  line-height: 40rpx;
  font-size: 26rpx;
}
.cart-container .item .right {
  width: 80rpx;
  text-align: center;
}
.cart-container .btn-submit {
  position: fixed;
  width: 100vw;
  bottom: 54rpx;
}
.delete {
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.van-swipe-cell__left {
  display: inline-block;
  width: 65px;
  height: 44px;
  font-size: 15px;
  line-height: 44px;
  color: #fff;
  text-align: center;
  background-color: #54dd54;
}
.van-swipe-cell__right {
  display: inline-block;
  width: 65px;
  height: 44px;
  font-size: 15px;
  line-height: 44px;
  color: #fff;
  text-align: center;
  background-color: #f44;
}
