.tab-box .van-tabs__scroll {
  background-color: #f5f5f5 !important;
}
.tab-box .van-tab {
  flex-basis: 20% !important;
}
.order-item {
  background-color: #fff;
  padding: 20rpx;
  border-radius: 8rpx;
  margin-top: 40rpx;
}
.order-item .top {
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
}
.order-item .top .left {
  color: #999;
}
.order-item .top .right {
  color: #FF3200;
}
.order-item .top .gray {
  color: #666;
}
.order-item .goods-item {
  height: 190rpx;
  margin: 20rpx 0 12rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.order-item .goods-item .title {
  height: 74rpx;
  line-height: 37rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.order-item .goods-item .goods-img {
  margin: 0 20rpx;
}
.order-item .goods-item .goods-img image {
  width: 164rpx;
  height: auto;
}
.order-item .goods-item .goods-tit {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}
.order-item .goods-item .goods-tit .desc {
  font-size: 24rpx;
  color: #999;
}
.order-item .goods-item .goods-tit .price {
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
}
.order-item .goods-item .goods-tit .price .l {
  font-size: 28rpx;
}
.order-item .shi {
  font-size: 24rpx;
  color: #333;
  text-align: right;
}
.order-item .shi text {
  color: #FF3200;
}
.order-item .btn-bottom {
  text-align: right;
  margin-top: 30rpx;
}
.order-item .btn-bottom .lef {
  margin-right: 20rpx;
}
